@import "../node_modules/codemirror/lib/codemirror.css"
@import "../node_modules/codemirror/addon/hint/show-hint.css"


// Please keep this code well-commented. If you add a property to fix some edge
// case or browser quirk, then explain this in a comment. Otherwise, you risk
// the possibility that a future contributor will remove the property, thinking
// it is no longer necessary.


// ============================================================================
// Mixins
// ============================================================================

inline(va)
  display inline-block
  vertical-align va

shadow(size, opacity)
  box-shadow 0px size 2*size rgba(0, 0, 0, opacity)

forceWidth(width)
  width width
  min-width width
  max-width width

defaultFont()
  font-family "Lucida Sans Unicode", "Lucida Grande", sans-serif

codeFont()
  font-family menlo, monospace

noSelect()
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

selectedColor = #09c
hoveredColor = #0c9
controlledColor = #c00


// ============================================================================
// Generic
// ============================================================================

html, body
  margin 0
  overflow hidden  // prevents "overscroll" of the app

[contenteditable]:active, [contenteditable]:focus, button:active, button:focus
  outline none

[contenteditable]
  cursor text

body
  defaultFont()
  font-size 12px
  color #333

canvas
  width 100%
  height 100%

.CursorOverride *
  cursor inherit !important

// Flex parent classes

.FlexRow
  display flex
  flex-direction row

.FlexColumn
  display flex
  flex-direction column

.FlexContainer
  display flex
  // (Strictly speaking, this is the same as FlexRow, but it communicates "I'm
  // just here to hold a single child; don't think of me as a row".)

// Flex child classes

.FlexAlignStart
  align-items flex-start

.FlexGrow
  flex 1

.FlexNoShrink
  flex 0 0 auto



// ============================================================================
// DragHintContainer
// ============================================================================

.DragHintContainer
  position fixed
  top 0
  left 0
  pointer-events none
  z-index 10
  .DragHint
    position absolute


// ============================================================================
// Layout
// ============================================================================

CreatePanelWidth = 120px
InspectorHeight = 50%
MenubarHeight = 24px
RightResizeWidth = 10px

.Editor
  position absolute
  width 100%
  height 100%

.Center
  overflow-x hidden  // so it can shrink smaller than the menu bar's width

.CreatePanel
  position relative
  box-sizing border-box
  width CreatePanelWidth
  background-color #eee
  border-right 1px solid #ccc

.RightPanel
  position relative
  box-sizing border-box

.CreatePanelContainer, .RightPanelContainer
  position absolute
  width 100%
  height 100%

.RightResize
  z-index 2
  position absolute
  width RightResizeWidth
  margin-left "-%s" % (RightResizeWidth / 2)
  height 100%
  cursor ew-resize

.Outline
  noSelect()

  position absolute
  top 0
  bottom InspectorHeight
  left 0
  right 0
  box-sizing border-box
  background-color #fff
  border-left 1px solid #ccc

.Inspector
  noSelect()

  position absolute
  top InspectorHeight
  bottom 0
  left 0
  right 0
  box-sizing border-box
  background-color #fff
  border-left 1px solid #ccc

.BareEditorCanvas, .BareViewerCanvas
  position relative
  canvas
    position absolute

.EditorCanvasDropzone
  &.dropActive
    background-color #F8FFF8
  &.dropReject
    background-color #FFF8F8

.LayoutMode
  noSelect()

  position absolute
  border 1px solid #ccc
  width 20px
  height 20px
  right 3px
  top -22px
  box-sizing border-box
  background-color #eee
  background-size 16px 16px
  background-position 1px 1px
  background-repeat no-repeat
  text-align center
  font-size 16px

  &.FullScreen
    top 2px


// ============================================================================
// Layout "Chrome"
// ============================================================================

HeaderSize = 18px

.Header
  width 100%
  height HeaderSize
  box-sizing border-box
  line-height HeaderSize - 2
  text-align center
  color #666
  text-shadow 0px 1px 0px rgba(255,255,255,0.5)
  background-color #eee
  background-image linear-gradient(to bottom, #fff, #ddd)
  border-top 1px solid #e6e6e6
  border-bottom 1px solid #d3d3d3

.HeaderSetting
  position absolute
  right 8px
  cursor pointer
  font-size 80%
  color #aaa

  &:hover
    color #000

.Scroller
  width 100%
  height "calc(100% - %s)" % HeaderSize
  overflow-y auto
  overflow-x hidden


// ============================================================================
// Menubar
// ============================================================================

.Menubar
  user-select none
  padding 4px
  box-sizing border-box
  height MenubarHeight
  background-color #eee
  border-bottom 1px #ccc solid

  .MenubarItem
    white-space nowrap
    padding 0 8px
    cursor pointer
    &:hover
      color #09c
    &.isDisabled
      cursor default
      color #aaa
      &:hover
        color #aaa

  .MenubarSeparator
    width 24px


// ============================================================================
// CreatePanel
// ============================================================================

.ThumbnailCanvas
  width 100%
  height 100%

.CreatePanelItem
  position relative
  padding 6px 6px 18px 6px

  .CreatePanelThumbnail
    cursor grab
    width CreatePanelWidth - 12px
    height CreatePanelWidth - 12px
    background-color white
    margin-bottom 6px
    shadow 1px 0.5

  .CreatePanelItemEditButton
    float right
    color transparent
    cursor pointer
  .CreatePanelItemRemoveButton
    position absolute
    top 7px
    right 7px
    font-size 16px
    color transparent
    cursor pointer

  &:hover
    .CreatePanelItemEditButton, .CreatePanelItemRemoveButton
      color rgba(0, 0, 0, 0.25)
      &:hover
        color rgba(0, 0, 0, 0.6)

  &.isEditing
    .CreatePanelThumbnail
      outline 2px solid #09c
    .CreatePanelItemEditButton
      color #09c !important

.CreatePanelAddItem
  font-size 18px
  text-align center


// ============================================================================
// Outline
// ============================================================================

.OutlineChildren
  margin-left 1.5em

.OutlineItem
  &.isHovered
    background-color tint(hoveredColor, 88%)
  &.isActiveController
    background-color tint(controlledColor, 88%)
  &.isSelected
    background-color tint(selectedColor, 88%)
  &.isController
    .ElementRow
      color #c66


.ElementRow
  padding: 0.175em 0
  .ElementRowDisclosure
    width 1.5em


.DisclosureTriangle
  width 0
  height 0
  margin-top .11em
  margin-left 0.134em
  border-top: 0.5em solid transparent
  border-bottom: 0.5em solid transparent
  border-left: 0.866em solid #ccc
  transition transform 0.05s
  &.isExpanded
    transform: rotate(90deg)
  &.Hidden
    // visibility hidden
    display none



.OutlineDragging, .AttributeRowDragging
  position fixed
  z-index 20
  background-color white
  pointer-events none
  box-shadow 0px 2px 6px rgba(0,0,0,0.5)
  opacity 0.7

.OutlinePlaceholder, .AttributeRowPlaceholder
  background-color #bbb
  box-shadow inset 0px 1px 3px rgba(0,0,0,0.5)


// ============================================================================
// Inspector
// ============================================================================

.InspectorList
  padding 0.5em




// ============================================================================
// Attributes List
// ============================================================================

.AttributesList
  margin-left 1.5em
  // margin-bottom 1em


// ============================================================================
// ComponentSection
// ============================================================================

.ComponentSection
  padding-bottom 1.25em

.ComponentSectionTitle
  // padding: 0.175em 0
  margin-left 2.25em
  color #999


// ============================================================================
// AttributeRow
// ============================================================================

.AttributeRow
  padding 0.175em 0

  &.isInherited
    opacity 0.5

  &.isGoingToChange
    .cm-number, .cm-operator
      color: #c00

  .AttributeRowControl
    forceWidth(1.5em)

  .AttributeRowLabel
    forceWidth(10em)

  .AttributeRowDragHandleSpacer
    text-align right
    margin 0px 4px

  .AttributeRowDragHandle
    display inline-block
    min-width 20px
    cursor grab

  &.isWrapped
    flex-wrap wrap
    .AttributeRowControl
      order 1
    .AttributeRowLabel
      order 2
    .AttributeRowDragHandleSpacer
      order 3
      flex-grow 1
    .AttributeRowExpression
      order 4
      padding-left 3.25em
      flex-basis 100%

  .AttributeControl
    width 1em
    height 1em
    border-radius 1em
    border 1px solid transparent
    &.isControllable
      border-color #c66

    &.isImplicitlyControlled
      background-color rgba(204, 102, 102, 0.4)

    &.isControlled
      background-color #c66

.AddVariableRow
  padding 0.05em 0 0.175em 0 // HACK to get it to line up
  margin-left 1.5em


// ============================================================================
// AttributeLabel
// ============================================================================

.AttributeLabel
  margin-right 0.5em

  &.Editing
    cursor text

  .AttributeLabelMainPart
    border-radius 20px 0 0 20px
    padding 0 0 0 0.75em
    cursor grab

  &:not(.isMenuVisible) .AttributeLabelMainPart
    border-radius 20px

  .AttributeLabelMenuPart
    border-radius 0 20px 20px 0
    padding 0 0.5em 0 0.25em
    border-left 1px solid #cccccc
    cursor pointer

    .AttributeLabelMenuPartIcon
      margin auto
      color #999

.AttributeLabel .AttributeLabelMainPart
.AttributeLabel .AttributeLabelMenuPart
.ReferenceToken
  defaultFont()
  color #333
  background-image linear-gradient(to bottom, #f4f4f4, #e4e4e4)

.AttributeLabel.isHovered .AttributeLabelMainPart
.AttributeLabel.isHovered .AttributeLabelMenuPart
.ReferenceToken.isHovered
  background-image linear-gradient(to bottom, tint(hoveredColor, 75%), tint(hoveredColor, 40%))

.AttributeLabel.isGoingToChange .AttributeLabelMainPart
.AttributeLabel.isGoingToChange .AttributeLabelMenuPart
.ReferenceToken.isGoingToChange
  background-image linear-gradient(to bottom, tint(controlledColor, 75%), tint(controlledColor, 40%))

.AttributeLabel.isMenuHovered .AttributeLabelMenuPart
  background-image linear-gradient(to bottom, #e4e4e4, #c4c4c4)


// ===========================================================================
// Spread Swatches
// ===========================================================================

.Swatches
  align-items center

  .Swatch
    display inline-flex
    width 10px
    height 10px
    margin-left 3px
    align-items center
    justify-content center

    .SwatchIcon
      color white
      font-size 70%


// ============================================================================
// Expression
// ============================================================================

.Expression
  codeFont()

.ExpressionValue
  color #ccc

.ReferenceToken
  border-radius 20px
  padding 0 0.75em
  display inline-block

// ============================================================================
// Editable Text
// ============================================================================

.EditableTextInline
  display inline
  padding-right 0.75em

// ============================================================================
// CodeMirror
// ============================================================================

.CodeMirror
  height auto
  background-color transparent
  font-family inherit
  font-size inherit
  line-height inherit
  color inherit
  .CodeMirror-lines
    padding 0
  pre
    padding 0

  // This fixes a CodeMirror bug/feature where old selection stuff remains
  // highlighted even after the CodeMirror is blurred.
  .CodeMirror-selected
    opacity 0
  &.CodeMirror-focused
    .CodeMirror-selected
      opacity 1

  // We float CodeMirror left, but this causes a problem with not being able to
  // see a cursor at the very end of a line. This should fix that.
  .CodeMirror-sizer
    padding-right 1px !important

// Numbers are scrubbable
.cm-number
  cursor ew-resize

.CodeMirror-hints
  font-family inherit


// ============================================================================
// rc-tooltip
// ============================================================================

.rc-tooltip-inner
  min-height 0 !important







